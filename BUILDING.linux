#!/bin/sh

# Tested on Debian 7.1.0, Ubuntu 12.04/12.10/13.04/13.10:

WORKING_DIR=/vagrant

# depdendencies
sudo apt-get update
sudo apt-get -y install build-essential \
                        curl \
                        m4 \
                        upx \
                        git \
                        python-dev \
                        libgmp-dev \
                        python-pip
sudo pip install twisted \
                 gmpy \
                 pycrypto \
                 obfsproxy \
                 pyptlib \
                 pyinstaller

# see: https://github.com/kpdyer/fteproxy/issues/66
sudo touch /usr/local/lib/python2.7/site-packages/zope/__init__.py

# fteproxy
cd $WORKING_DIR
git clone https://github.com/kpdyer/fteproxy.git
cd fteproxy
make -j`nproc`
